{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "es7",
      "dom"
    ],
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
